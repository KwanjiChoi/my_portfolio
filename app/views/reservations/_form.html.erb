<section id="reservation-form" class="padding-top-bottom">
  <div class="container">
    <div class="row">
      <%= form_with model: [project, reservation], local: true, class: 'col-10 mx-auto' do |f| %>
        
        <%= render 'shared/error_messages', resource: reservation %>

        <%= f.hidden_field :requester_id, :value => current_user.id %>

        <div class="form-group">
          <%= f.label :start_at, '開始日時', class: 'control-label' %>
          <div class="controls">
            <%= f.datetime_field :start_at %>
          </div>
        </div>

        <div calss="form-group">
          <%= f.label :reserve_time, '予約時間', class: 'control-label'%>
          <div class="controls">
            <%=  f.select :reserve_time, Reservation::RESERVE_TIME, {include_blank: "選択してください"}, {class: ""} %>
          </div>
        </div>


        <div class="form-group">
          <div class="field">
            <%= f.label :request_text %>
            <%= f.text_area :request_text, class: "form-control", id: "exampleFormControlTextarea1", rows: "5" %>
          </div>
        </div>

        <p><%= f.submit 'Make a reservation!', class: 'btn btn-info btn-block' %></p>
          
      <% end %>
      
    </div>	
  </div>	
</section>