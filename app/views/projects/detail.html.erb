<% if current_user %>
  <%= render 'shared/sidenav' %>
<% else %>
  <%= render 'shared/not_sign_in_sidenav' %>
<% end %>

<div class="container">
  <div class="jumbotron">
    <%= render 'shared/notification' %>
    <section id="project-show" class="padding-top-bottom mx-auto">
      <h1 class='text-center'> <%= @project.title%> </h1>
      <p> カテゴリー：<%= link_to @project.category_name, '#' %> </p>
      <p> project by <%= link_to @project.owner, user_path(@project.user) %></p>
      <div>
        <%= image_tag @project.main_image.show_thumb.url, class: 'd-block mx-auto' %>
      </div>
      <div class='col-md-10 mt-5 mx-auto'>
        <div class="mb-5 row">
          <div class='col-md-6 text-center mt-3'>
            <p>予約実績</p>
            <h4>50件</h4>
          </div>
          <div class='col-md-6 text-center mt-3'>
            <p class='text-center'>平均評価</p>
            <%= render 'shared/star_ave', rate: 0 %>
            <p class='mt-2'>まだ評価はございません</p>
          </div>
        </div>
        <%= @project.content %>
        <button class="btn btn-info btn-lg mt-3 pull-right" data-toggle="modal" data-target="#exampleModal">reservation now!!</button>
      </div>

      <%= render 'projects/modal', project: @project %>

    </section>

    <%= render 'comments/index', commentable: @project %>
    <%= render 'comments/form',  commentable: @project %>
  </div>
</div>