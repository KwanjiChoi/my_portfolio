<%= render 'shared/sidenav' %>

<div class="container">
  <div class="jumbotron">
    <%= render 'shared/notification' %>
    <section id="project-show" class="padding-top-bottom">
      <h1> <%= @project.title%> </h1>
      <p> <%= link_to @project.category_name, '#' %> </p>
      <p> project by <%= link_to @project.owner, user_path(@project.user) %></p>
      <%= image_tag @project.main_image.show_thumb.url %>
      <%= @project.content %>

      <% if current_user.project_owner?(@project) %>
        <button type="button" class="btn btn-labeled btn-warning">
          edit
        </button>
        <%= link_to project_path(@project), method: :delete, data: { confirm: 'Are you sure?' } do %>
          <button type="button" class="btn btn-labeled btn-danger">
            delete
          </button>
        <% end %>
      <% else %>
        <button class="btn btn-info btn-lg" data-toggle="modal" data-target="#exampleModal">reservation now!!</button>
        <%= render 'modal' %>
      <% end %>
    </section>
  </div>
</div>