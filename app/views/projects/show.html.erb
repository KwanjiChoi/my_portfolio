
<%= render 'shared/sidenav' %>

<div class="container">
  <div class="jumbotron">
    <%= render 'shared/notification' %>
    <section id="project-show" class="padding-top-bottom">
      <h1><%= @project.title%> </h1>
      <p> <%= link_to @project.category_name, feed_projects_path(category_id: @project.project_category) %> </p>
      <p> project by <%= link_to @project.owner, user_path(@project.user) %></p>
      <div class='project-image'>
        <%= image_tag @project.main_image.to_s, class: 'img-fluid d-block mx-auto' %>
      </div>

      <div class='project-content mt-5'>
        <%= @project.content %>
      </div>

      <div class='mt-3'>
        <%= link_to edit_project_path(@project) do %>
          <button type="button" class="btn btn-labeled btn-warning">
            edit
          </button>
        <% end %>
        <%= link_to project_path(@project), method: :delete, data: { confirm: 'Are you sure?' } do %>
          <button type="button" class="btn btn-labeled btn-danger">
            delete
          </button>
        <% end %>
      </div>

    </section>
  </div>
</div>


