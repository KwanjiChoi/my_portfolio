<%= render 'shared/sidenav' %>

<div class="container dashboard-container">
  <div class="jumbotron">
    <%= render 'shared/notification' %>

    <div class="container">
      <div class="mt-5">
        <h2> 申込済みのProject</h2>
        <small>オーナーの確認をお待ちください</small>
        <% @my_reservations.each do |reservation| %>
          <div class="d-style btn btn-brc-tp border-2 bgc-white btn-outline-blue btn-h-outline-blue btn-a-outline-blue w-100 my-2 py-3 shadow-sm reservation-card">

            <div class="row align-items-center">
              <div class="col-12 col-md-4">
                <h4 class="pt-3 text-170 text-600 text-primary-d1 letter-spacing">
                  <%= reservation.owner_name %>
                </h4>

                <div class="text-secondary-d1 text-120">
                  <span class="text-180">予約日: <%= reservation.created_at.strftime('%Y/%m/%d %H:%M:%S') %></span>
                </div>
              </div>

              <ul class="list-unstyled mb-0 col-12 col-md-4 text-dark-l1 text-90 text-left my-4 my-md-0">
                <li>
                  <h4> <%= reservation.project.title %> </h4>
                </li>

                <li class="mt-25">
                  <span class="text-110">
                    Placerat duis
                  </span>
                </li>

                <li class="mt-25">
                  <span class="text-110">
                    status: <%= reservation.status %>
                  </span>
                </li>
              </ul>

              <div class="col-12 col-md-4 text-center">
                <a href="#" class="f-n-hover btn btn-info btn-raised px-4 py-25 w-75 text-600">Get Started</a>
              </div>
            </div>

          </div>
        <% end %>
      </div>
    </div>

    <footer>
        Repository maintained by <a href="https://github.com/mladenplavsic">mladenplavsic</a>
    </footer>
  </div>

</div>
