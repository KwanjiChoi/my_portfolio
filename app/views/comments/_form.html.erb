<section class='comment-form mt-1'>
  <%= form_with model: [commentable, new_comment], local: true, class: "form-horizontal col-12" do |f| %>

    <%= render 'shared/error_messages', resource: new_comment %>

    <div class='form-group'>
      <%= f.text_area :comment, class: 'form-control', placeholder: 'Add a comment' %>
    </div>

    <div class="form-group">
      <%= f.label :score, '評価(5段階)', class: 'control-label col-xs-2' %>
      <%= f.select :score, Comment::SCORE_VALUES, {include_blank: "選択してください"}, {class: "form-control col-5"} %>
    </div>
    <%= f.submit class:'btn btn-primary' %>
  <% end %>
</section>